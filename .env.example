# Server
NODE_ENV=development
PORT=3000
CLIENT_URL=http://localhost:5173

# Database (local: Docker Postgres 17, production: Neon)
DATABASE_URL=postgresql://skills_dev:skills_dev@localhost:5432/skills_trainer

# Auth
JWT_SECRET=your-secret-here-change-in-production-minimum-32-characters
JWT_EXPIRES_IN=7d

# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-north-1
S3_BUCKET_NAME=

# Anthropic LLM
ANTHROPIC_API_KEY=

# Email (Resend)
RESEND_API_KEY=
EMAIL_FROM=noreply@yourdomain.com

# Error Tracking (optional â€” leave empty to disable)
