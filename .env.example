# App
NODE_ENV=development
PORT=3000
CLIENT_URL=http://localhost:5173

# Database (Prisma)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Auth
JWT_SECRET=your-secret-key-minimum-32-characters-long
JWT_EXPIRES_IN=7d

# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
